@model DataLayer.Models.Earphone

<div id="Show" data-bind="visible:EarphoneViewModel.isReadMode">
    
    <div>
        Max Price <span data-bind="text: EarphoneViewModel.maxPrice"></span>
        Min Price <span data-bind="text: EarphoneViewModel.minPrice"></span>
    </div>



    <div data-bind="foreach: EarphoneViewModel.arr" class="row">
        <div class="col-md-4 ">
            <br/>
            @Html.LabelFor(model => model.Model)
            <span data-bind="text: $data.Model"></span><br/>
            @Html.LabelFor(model => model.Producer)<span data-bind="text: $data.Producer"></span>
            <br />
            @Html.LabelFor(model => model.Price) <span data-bind="text: $data.Price"></span>
            <br />
            <input type="button" class="btn  btn-sm" value="To Cart" data-bind="click: $root.EarphoneViewModel.AddToCart" /><br />
            <input type="button" class="btn btn-info btn-sm" value="Details" data-bind="click: $root.goToPageItem" /><br/>
        </div>
    </div>
</div>
