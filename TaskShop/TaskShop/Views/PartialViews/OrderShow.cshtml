@model DataLayer.Models.Order

<div data-bind="with:currentData">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="editor-label">
                    @Html.DisplayNameFor(model => model.Id)
                    <span data-bind="text: Order.Id"></span>
                </div>
                <div class="editor-label">

                    @Html.DisplayNameFor(model => model.TotalCount)
                    <span data-bind="text: Order.TotalCount"></span>
                </div>
                <div class="editor-label">

                    @Html.DisplayNameFor(model => model.Discount)
                    <span data-bind="text: Order.Discount"></span>
                </div>
                <div class="editor-label">
                    @Html.DisplayNameFor(model => model.Email)
                    <span data-bind="text: Order.Email"></span>
                </div>
                <div class="editor-label">
                    @Html.DisplayNameFor(model => model.City)
                    <span data-bind="text: Order.City"></span>
                </div>
                <div class="editor-label">
                    @Html.DisplayNameFor(model => model.Street)
                    <span data-bind="text: Order.Street"></span>
                </div>
                <div class="editor-label">
                    @Html.DisplayNameFor(model => model.House)

                    <span data-bind="text: Order.House"></span>
                </div>
                <div class="editor-label">
                    @Html.DisplayNameFor(model => model.CardNumber)
                    <span data-bind="text: Order.CardNumber"></span>
                </div>
                <div class="editor-label">
                    @Html.DisplayNameFor(model => model.TotalGoodsPrice)
                    <span data-bind="text: Order.TotalGoodsPrice"></span>
                </div>
                <div class="editor-label">
                    @Html.DisplayNameFor(model => model.DeliveryPrice)

                    <span data-bind="text: Order.DeliveryPrice"></span>
                </div>
                <div class="editor-label">
                    @Html.DisplayNameFor(model => model.TotalPrice)
                    <span data-bind="text: Order.TotalPrice"></span>
                </div>
            </div>
            <div class="col-md-8">
                <div data-bind="foreach:GoodsList" class="row">
                    <div class="col-md-4">
                        GoodsId:      <span data-bind="text: $data.GoodsId"></span>
                        <br />
                        GoodsCategory:<span data-bind="text: $data.GoodsCategory"></span><br />
                        Count:        <span data-bind="text: $data.Count"></span>
                        <br />
                        Price:        <span data-bind="text: $data.Price"></span>
                        <br />
                        <input type="button" class="btn btn-info" value="Details" data-bind="click: $root.goToPageCategoryItem" /><br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
