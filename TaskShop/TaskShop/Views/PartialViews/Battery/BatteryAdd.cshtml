@model DataLayer.Models.Battery


<div id="Add" data-bind="visible:BatteryViewModel.isEditMode">
    <div class="editor-label">
        @Html.LabelFor(model => model.Producer)
    </div>
    <div class="editor-field">
        <input type="text" data-bind="value: BatteryViewModel.BatteryModel.Producer" />
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Capacity)
    </div>
    <div class="editor-field">
        <input type="text" data-bind="value: BatteryViewModel.BatteryModel.Capacity" />
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Model)  
    </div>
    <div class="editor-field">
        <input type="text" data-bind="value: BatteryViewModel.BatteryModel.Model" />
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Voltage)
    </div>
    <div class="editor-field">

        <input type="text" data-bind="value: BatteryViewModel.BatteryModel.Voltage" />
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Price)   
    </div>
    <div class="editor-field">

        <input type="text" data-bind="value: BatteryViewModel.BatteryModel.Price" />
    </div>


    <p>
        <input type="button" value="Add" data-bind="click: BatteryViewModel.Add" />
        <input type="button" value="Cancel" data-bind="click: BatteryViewModel.Cancel" />
    </p>

</div>
