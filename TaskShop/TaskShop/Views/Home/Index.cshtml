                //self.chosenFolderId(this.params.folder);
                //self.chosenFolderData(null);
               
                //$.get(options.batteryGetById, { id: this.params.Id }, model);
                var jsonData = {id:this.params.Id};
                var currentCategory = this.params.view;
                $.post(options.batteryGetById, jsonData, function (returnedData) {
                    if (returnedData)
                        vm.goToPageItem(currentCategory, returnedData);
                });
                
               
                //$.ajax({
                //    type: 'GET',
