@model IEnumerable<TaskShop.Models.Battery>
<div id="Show" data-bind="visible:BatteryViewModel.isReadMode">

    <div class="table-responsive">
        <table class="table" id="TestTable">
            <thead>
                <tr>
                    <th class="col-md-3">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th class="col-md-3">
                        @Html.DisplayNameFor(model => model.Producer)
                    </th>
                    <th class="col-md-3">
                        @Html.DisplayNameFor(model => model.Capacity)
                    </th>
                    <th class="col-md-3">
                        @Html.DisplayNameFor(model => model.Voltage)
                    </th>
                    <th class="col-md-3">
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody data-bind="foreach: BatteryViewModel.arr">
                <tr data-bind="click: $root.goToItem">
                    <td class="col-md-3">
                        <span data-bind="text: $data.Id"></span>
                    </td>
                    <td class="col-md-3">
                        <span data-bind="text: $data.Producer"></span>
                    </td>
                    <td class="col-md-3">
                        <span data-bind="text: $data.Capacity"></span>
                    </td>
                    <td class="col-md-3">
                        <span data-bind="text: $data.Voltage"></span>
                    </td>
                    <td class="col-md-3">
                        <span data-bind="text: $data.Price"></span>
                    </td>
                    <td class="col-md-3">
                        <input type="button" class="btn" value="To Cart" data-bind="click: $root.BatteryViewModel.AddToCart" />
                    </td>
                </tr>
        </table>
    </div>
    <div>Max Price </div>
    <span data-bind="text: BatteryViewModel.maxPrice"></span>
    <div>Min Price </div>
    <span data-bind="text: BatteryViewModel.minPrice"></span>
</div>
